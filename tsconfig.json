{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
  },
  "ts-node": {
    "transpileOnly": true,
  },
  "exclude": [
    "node_modules"
  ]
}